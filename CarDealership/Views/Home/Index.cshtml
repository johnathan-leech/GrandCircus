<a href="~/Home/AddCar">Add a New Car</a>

<br /><br /><br />
<table class="table">
    <tr>
        <th><h1>Make</h1></th>
        <th><h1>Model</h1></th>
        <th><h1>Year</h1></th>
        <th><h1>Color</h1></th>
        
    </tr>
    @foreach (dynamic car in ViewBag.CarList)
    {
    <tr>
        <td>@car.Make</td>
        <td>@car.Model</td>
        <td>@car.Year</td>
        <td>@car.Color</td>
        <td><a href="~/Home/DeleteCar?Id=@car.Id" onclick="return confirm('Are you sure?')" 
               class="btn">Delete</a></td>
        <td><a href="~/Home/EditCar?Id=@car.Id" class="btn">Edit</a></td>
    </tr>
    }
</table>